{
  "surah": 104,
  "name": "Al-Humaza",
  "arabicName": "سُورَةُ الهُمَزَةِ",
  "verses": [
    {
      "number": 1,
      "arabic": "  وَیۡلࣱ لِّكُلِّ هُمَزَةࣲ لُّمَزَةٍ\n",
      "translation": "Woe to every scorner and mocker",
      "transliteration": "Wai lul-li kulli hu mazatil-lumaza"
    },
    {
      "number": 2,
      "arabic": "ٱلَّذِی جَمَعَ مَالࣰا وَعَدَّدَهُۥ\n",
      "translation": "Who collects wealth and [continuously] counts it.",
      "transliteration": "Al-lazi jama'a maalaw wa'addadah"
    },
    {
      "number": 3,
      "arabic": "یَحۡسَبُ أَنَّ مَالَهُۥۤ أَخۡلَدَهُۥ\n",
      "translation": "He thinks that his wealth will make him immortal.",
      "transliteration": "Yahsabu anna maalahu akhladah"
    },
    {
      "number": 4,
      "arabic": "كَلَّاۖ لَیُنۢبَذَنَّ فِی ٱلۡحُطَمَةِ\n",
      "translation": "No! He will surely be thrown into the Crusher.",
      "transliteration": "Kalla layum ba zanna fil hutamah"
    },
    {
      "number": 5,
      "arabic": "وَمَاۤ أَدۡرَىٰكَ مَا ٱلۡحُطَمَةُ\n",
      "translation": "And what can make you know what is the Crusher?",
      "transliteration": "Wa maa adraaka mal-hutamah"
    },
    {
      "number": 6,
      "arabic": "نَارُ ٱللَّهِ ٱلۡمُوقَدَةُ\n",
      "translation": "It is the fire of Allah, [eternally] fueled,",
      "transliteration": "Narul laahil-mooqada"
    },
    {
      "number": 7,
      "arabic": "ٱلَّتِی تَطَّلِعُ عَلَى ٱلۡأَفۡـِٔدَةِ\n",
      "translation": "Which mounts directed at the hearts.",
      "transliteration": "Al latee tat tali'u 'alalafidah"
    },
    {
      "number": 8,
      "arabic": "إِنَّهَا عَلَیۡهِم مُّؤۡصَدَةࣱ\n",
      "translation": "Indeed, Hellfire will be closed down upon them",
      "transliteration": "Innaha 'alaihim moosada"
    },
    {
      "number": 9,
      "arabic": "فِی عَمَدࣲ مُّمَدَّدَةِۭ\n",
      "translation": "In extended columns.",
      "transliteration": "Fee 'amadim-mu mad dadah"
    }
  ]
}