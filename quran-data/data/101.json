{
  "surah": 101,
  "name": "Al-Qaari'a",
  "arabicName": "سُورَةُ القَارِعَةِ",
  "verses": [
    {
      "number": 1,
      "arabic": "  ٱلۡقَارِعَةُ\n",
      "translation": "The Striking Calamity -",
      "transliteration": "Al qaari'ah"
    },
    {
      "number": 2,
      "arabic": "مَا ٱلۡقَارِعَةُ\n",
      "translation": "What is the Striking Calamity?",
      "transliteration": "Mal qaariah"
    },
    {
      "number": 3,
      "arabic": "وَمَاۤ أَدۡرَىٰكَ مَا ٱلۡقَارِعَةُ\n",
      "translation": "And what can make you know what is the Striking Calamity?",
      "transliteration": "Wa maa adraaka mal qaari'ah"
    },
    {
      "number": 4,
      "arabic": "یَوۡمَ یَكُونُ ٱلنَّاسُ كَٱلۡفَرَاشِ ٱلۡمَبۡثُوثِ\n",
      "translation": "It is the Day when people will be like moths, dispersed,",
      "transliteration": "Yauma ya koonun naasu kal farashil mabthooth"
    },
    {
      "number": 5,
      "arabic": "وَتَكُونُ ٱلۡجِبَالُ كَٱلۡعِهۡنِ ٱلۡمَنفُوشِ\n",
      "translation": "And the mountains will be like wool, fluffed up.",
      "transliteration": "Wa ta koonul jibalu kal 'ihnil manfoosh"
    },
    {
      "number": 6,
      "arabic": "فَأَمَّا مَن ثَقُلَتۡ مَوَ ٰ⁠زِینُهُۥ\n",
      "translation": "Then as for one whose scales are heavy [with good deeds],",
      "transliteration": "Fa-amma man thaqulat mawa zeenuh"
    },
    {
      "number": 7,
      "arabic": "فَهُوَ فِی عِیشَةࣲ رَّاضِیَةࣲ\n",
      "translation": "He will be in a pleasant life.",
      "transliteration": "Fahuwa fee 'ishatir raadiyah"
    },
    {
      "number": 8,
      "arabic": "وَأَمَّا مَنۡ خَفَّتۡ مَوَ ٰ⁠زِینُهُۥ\n",
      "translation": "But as for one whose scales are light,",
      "transliteration": "Wa amma man khaffat mawa zeenuh"
    },
    {
      "number": 9,
      "arabic": "فَأُمُّهُۥ هَاوِیَةࣱ\n",
      "translation": "His refuge will be an abyss.",
      "transliteration": "Fa-ummuhu haawiyah"
    },
    {
      "number": 10,
      "arabic": "وَمَاۤ أَدۡرَىٰكَ مَا هِیَهۡ\n",
      "translation": "And what can make you know what that is?",
      "transliteration": "Wa maa adraaka maa hiyah"
    },
    {
      "number": 11,
      "arabic": "نَارٌ حَامِیَةُۢ\n",
      "translation": "It is a Fire, intensely hot.",
      "transliteration": "Naarun hamiyah"
    }
  ]
}