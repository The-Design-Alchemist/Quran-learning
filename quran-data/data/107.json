{
  "surah": 107,
  "name": "Al-Maa'un",
  "arabicName": "سُورَةُ المَاعُونِ",
  "verses": [
    {
      "number": 1,
      "arabic": "  أَرَءَیۡتَ ٱلَّذِی یُكَذِّبُ بِٱلدِّینِ\n",
      "translation": "Have you seen the one who denies the Recompense?",
      "transliteration": "Ara-aital lazee yu kazzibu bid deen"
    },
    {
      "number": 2,
      "arabic": "فَذَ ٰ⁠لِكَ ٱلَّذِی یَدُعُّ ٱلۡیَتِیمَ\n",
      "translation": "For that is the one who drives away the orphan",
      "transliteration": "Fa zaalikal lazi yadu'ul-yateem"
    },
    {
      "number": 3,
      "arabic": "وَلَا یَحُضُّ عَلَىٰ طَعَامِ ٱلۡمِسۡكِینِ\n",
      "translation": "And does not encourage the feeding of the poor.",
      "transliteration": "Wa la ya huddu 'alaa ta'amil miskeen"
    },
    {
      "number": 4,
      "arabic": "فَوَیۡلࣱ لِّلۡمُصَلِّینَ\n",
      "translation": "So woe to those who pray",
      "transliteration": "Fa wai lul-lil mu salleen"
    },
    {
      "number": 5,
      "arabic": "ٱلَّذِینَ هُمۡ عَن صَلَاتِهِمۡ سَاهُونَ\n",
      "translation": "[But] who are heedless of their prayer -",
      "transliteration": "Al lazeena hum 'an salaatihim sahoon"
    },
    {
      "number": 6,
      "arabic": "ٱلَّذِینَ هُمۡ یُرَاۤءُونَ\n",
      "translation": "Those who make show [of their deeds]",
      "transliteration": "Al lazeena hum yuraa-oon"
    },
    {
      "number": 7,
      "arabic": "وَیَمۡنَعُونَ ٱلۡمَاعُونَ\n",
      "translation": "And withhold [simple] assistance.",
      "transliteration": "Wa yamna'oonal ma'oon"
    }
  ]
}