{
  "surah": 108,
  "name": "Al-Kawthar",
  "arabicName": "سُورَةُ الكَوۡثَرِ",
  "verses": [
    {
      "number": 1,
      "arabic": "  إِنَّاۤ أَعۡطَیۡنَـٰكَ ٱلۡكَوۡثَرَ\n",
      "translation": "Indeed, We have granted you, [O Muhammad], al-Kawthar.",
      "transliteration": "Innaa a'taina kal kauthar"
    },
    {
      "number": 2,
      "arabic": "فَصَلِّ لِرَبِّكَ وَٱنۡحَرۡ\n",
      "translation": "So pray to your Lord and sacrifice [to Him alone].",
      "transliteration": "Fa salli li rabbika wanhar"
    },
    {
      "number": 3,
      "arabic": "إِنَّ شَانِئَكَ هُوَ ٱلۡأَبۡتَرُ\n",
      "translation": "Indeed, your enemy is the one cut off.",
      "transliteration": "Inna shani-aka huwal abtar"
    }
  ]
}